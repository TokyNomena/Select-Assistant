<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Make sure to include Material Design resources -->
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
  </ResourceDictionary.MergedDictionaries>
  
  <Style x:Key="MaterialDesignGridSplitterPreview" TargetType="Control">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Rectangle Fill="{DynamicResource MaterialDesignPrimary}" 
                     Opacity="0.2" RadiusX="2" RadiusY="2"/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  
  <Style x:Key="MAUGridSplitterVerticalStyle" TargetType="GridSplitter">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Opacity" Value="0.56"/>
    <Setter Property="MinWidth" Value="1"/>
    <Setter Property="Width" Value="6"/>
    <Setter Property="Margin" Value="0 10"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="PreviewStyle" Value="{StaticResource MaterialDesignGridSplitterPreview}"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="GridSplitter">
          <Grid Background="{TemplateBinding Background}">
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="25"/>
              <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Top line -->
            <Rectangle x:Name="rect1" 
                              Fill="{DynamicResource MaterialDesignBodyLight}"
                              Grid.Row="0" 
                              HorizontalAlignment="Center"
                              Width="2"
                              Opacity="0.6"/>
            <!-- Middle grip handle -->
            <Border x:Name="borderGrip" 
                           Background="{DynamicResource MaterialDesignBodyLight}"
                           Grid.Row="1" 
                           Width="6" 
                           Height="20"
                           CornerRadius="3"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
              <Border.Style>
                <Style TargetType="Border">
                  <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                      <Setter Property="Background" Value="{DynamicResource MaterialDesignPrimary}"/>
                      <Setter Property="Width" Value="8"/>
                    </Trigger>
                    <DataTrigger Binding="{Binding IsDragging, RelativeSource={RelativeSource AncestorType=GridSplitter}}" Value="True">
                      <Setter Property="Background" Value="{DynamicResource MaterialDesignPrimary}"/>
                      <Setter Property="Width" Value="8"/>
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </Border.Style>
            </Border>
            <!-- Bottom line -->
            <Rectangle x:Name="rect2" 
                              Fill="{DynamicResource MaterialDesignBodyLight}"
                              Grid.Row="2" 
                              HorizontalAlignment="Center"
                              Width="2"
                              Opacity="0.6"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Cursor" Value="SizeWE"/>
      </Trigger>
      <Trigger Property="IsDragging" Value="True">
        <Setter Property="Opacity" Value="1"/>
      </Trigger>
      <Trigger Property="ResizeDirection" Value="Rows">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="6"/>
        <Setter Property="Cursor" Value="SizeNS"/>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="GridSplitter">
              <Grid Background="{TemplateBinding Background}">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="25"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Left line -->
                <Rectangle x:Name="rect1" 
                                      Fill="{DynamicResource MaterialDesignBodyLight}"
                                      Grid.Column="0" 
                                      VerticalAlignment="Center"
                                      Height="2"
                                      Opacity="0.6"/>
                <!-- Middle grip handle -->
                <Border x:Name="borderGrip" 
                                   Background="{DynamicResource MaterialDesignBodyLight}"
                                   Grid.Column="1" 
                                   Width="20" 
                                   Height="6"
                                   CornerRadius="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                  <Border.Style>
                    <Style TargetType="Border">
                      <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                          <Setter Property="Background" Value="{DynamicResource MaterialDesignPrimary}"/>
                          <Setter Property="Height" Value="8"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding IsDragging, RelativeSource={RelativeSource AncestorType=GridSplitter}}" Value="True">
                          <Setter Property="Background" Value="{DynamicResource MaterialDesignPrimary}"/>
                          <Setter Property="Height" Value="8"/>
                        </DataTrigger>
                      </Style.Triggers>
                    </Style>
                  </Border.Style>
                </Border>
                <!-- Right line -->
                <Rectangle x:Name="rect2" 
                                      Fill="{DynamicResource MaterialDesignBodyLight}"
                                      Grid.Column="2" 
                                      VerticalAlignment="Center"
                                      Height="2"
                                      Opacity="0.6"/>
              </Grid>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Trigger>
    </Style.Triggers>
  </Style>
  <Style x:Key="MAUGridSplitterHorizontalStyle" TargetType="GridSplitter">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Opacity" Value="0.56"/>
    <Setter Property="MinHeight" Value="1"/>
    <Setter Property="Height" Value="6"/>
    <Setter Property="Margin" Value="10 0"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="PreviewStyle" Value="{StaticResource MaterialDesignGridSplitterPreview}"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="GridSplitter">
          <Grid Background="{TemplateBinding Background}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="25"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Left line -->
            <Rectangle x:Name="rect1" 
                              Fill="{DynamicResource MaterialDesignBody}"
                              Grid.Column="0" 
                              VerticalAlignment="Center"
                              Height="2"
                              Opacity="0.6"/>
            <!-- Middle grip handle -->
            <Border x:Name="borderGrip" 
                           Background="{DynamicResource MaterialDesignBody}"
                           Grid.Column="1" 
                           Width="20" 
                           Height="6"
                           CornerRadius="3"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
              <Border.Style>
                <Style TargetType="Border">
                  <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                      <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                      <Setter Property="Height" Value="8"/>
                    </Trigger>
                    <DataTrigger Binding="{Binding IsDragging, RelativeSource={RelativeSource AncestorType=GridSplitter}}" Value="True">
                      <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                      <Setter Property="Height" Value="8"/>
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </Border.Style>
            </Border>
            <!-- Right line -->
            <Rectangle x:Name="rect2" 
                              Fill="{DynamicResource MaterialDesignBody}"
                              Grid.Column="2" 
                              VerticalAlignment="Center"
                              Height="2"
                              Opacity="0.6"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Cursor" Value="SizeNS"/>
      </Trigger>
      <Trigger Property="IsDragging" Value="True">
        <Setter Property="Opacity" Value="1"/>
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>